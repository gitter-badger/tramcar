extends ../layout.jade

block title
  title Companies

block content
  h1 Companies

  table(class='table')
    thead
      tr
        th Name
        th Twitter
        th Job Count
    each company in companies
      tr
        td
          a(href="/companies/#{company._id}")= company.name
        td
          a(href="https://twitter.com/#{company.twitter}")= company.twitter
        td= company._jobs.length
